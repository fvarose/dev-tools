// Place your key bindings in this file to overwrite the defaults
[
    // ------------------------------------------------------------
    // Basics
    {
        "key": "shift+space",
        "command": "workbench.action.switchWindow"
    },
    {
        "key": "ctrl+w",
        "command": "-workbench.action.switchWindow"
    },
    // ------------------------------------------------------------
    // Navigation
    {
        "key": "ctrl+cmd+left",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "ctrl+-",
        "command": "-workbench.action.navigateBack"
    },
    {
        "key": "ctrl+cmd+right",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "ctrl+shift+-",
        "command": "-workbench.action.navigateForward"
    },
    {
        "key": "alt+right",
        "command": "cursorWordPartRight",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+alt+right",
        "command": "-cursorWordPartRight",
        "when": "textInputFocus"
    },
    {
        "key": "alt+left",
        "command": "cursorWordPartStartLeft",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+alt+left",
        "command": "-cursorWordPartStartLeft",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+right",
        "command": "cursorWordPartRightSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+alt+right",
        "command": "-cursorWordPartRightSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+left",
        "command": "cursorWordPartStartLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+alt+left",
        "command": "-cursorWordPartStartLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "alt+backspace",
        "command": "deleteWordPartLeft",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+alt+backspace",
        "command": "-deleteWordPartLeft",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "alt+delete",
        "command": "deleteWordPartRight",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+alt+delete",
        "command": "-deleteWordPartRight",
        "when": "textInputFocus && !editorReadonly"
    },
    // ------------------------------------------------------------
    // Folding
    {
        "key": "cmd+1",
        "command": "editor.foldLevel1",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+1",
        "command": "-editor.foldLevel1",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+2",
        "command": "editor.foldLevel2",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+2",
        "command": "-editor.foldLevel2",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+3",
        "command": "editor.foldLevel3",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+3",
        "command": "-editor.foldLevel3",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+4",
        "command": "editor.foldLevel4",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+4",
        "command": "-editor.foldLevel4",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+5",
        "command": "editor.foldLevel5",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+5",
        "command": "-editor.foldLevel5",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+6",
        "command": "editor.foldLevel6",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+6",
        "command": "-editor.foldLevel6",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+7",
        "command": "editor.foldLevel7",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+7",
        "command": "-editor.foldLevel7",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+0",
        "command": "editor.unfoldAll",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+j",
        "command": "-editor.unfoldAll",
        "when": "editorTextFocus"
    },
    // ------------------------------------------------------------
    // C++/CMake
    {
        "key": "shift+cmd+b shift+cmd+b",
        "command": "cmake.build"
    },
    {
        "key": "f7",
        "command": "-cmake.build"
    },
    {
        "key": "shift+cmd+b shift+cmd+t",
        "command": "cmake.ctest"
    },
    {
        "key": "ctrl+cmd+b ctrl+cmd+r",
        "command": "cmake.launchTarget"
    },
    {
        "key": "shift+f5",
        "command": "-cmake.launchTarget"
    },
    {
        "key": "shift+cmd+b shift+cmd+c",
        "command": "cmake.clean"
    },
    {
        "key": "f5",
        "command": "cmake.debugTarget",
        "when": "!inDebugMode"
    },
    {
        "key": "ctrl+f5",
        "command": "-cmake.debugTarget",
        "when": "!inDebugMode"
    },
    {
        "key": "alt+cmd+down",
        "command": "workbench.action.debug.stepInto",
        "when": "inDebugMode"
    },
    {
        "key": "f11",
        "command": "-workbench.action.debug.stepInto",
        "when": "inDebugMode"
    },
    {
        "key": "alt+cmd+up",
        "command": "workbench.action.debug.stepOut",
        "when": "inDebugMode"
    },
    {
        "key": "shift+f11",
        "command": "-workbench.action.debug.stepOut",
        "when": "inDebugMode"
    },
    {
        "key": "alt+cmd+right",
        "command": "workbench.action.debug.stepOver",
        "when": "inDebugMode"
    },
    {
        "key": "f10",
        "command": "-workbench.action.debug.stepOver",
        "when": "inDebugMode"
    },
    // ------------------------------------------------------------
    // Bitbucket
    {
        "key": "cmd+b cmd+p",
        "command": "codebucket.openPullRequest"
    },
    {
        "key": "cmd+b cmd+o",
        "command": "codebucket.open"
    },
    {
        "key": "cmd+b cmd+c",
        "command": "codebucket.openChangeset"
    },
]